<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="011-create-user-contacts-table" author="developer">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_contacts"/>
            </not>
            <tableExists tableName="user_addresses"/>
            <tableExists tableName="users"/>
        </preConditions>
        
        <createTable tableName="user_contacts">
            <column name="user_contact_id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_address_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="email_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="opt_in_email" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="opt_in_whatsapp" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="opt_in_sms" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(20)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="modified_on" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="modified_by" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint
                baseTableName="user_contacts"
                baseColumnNames="user_address_id"
                constraintName="fk_user_contacts_user_address_id"
                referencedTableName="user_addresses"
                referencedColumnNames="user_address_id"/>
        
        <addForeignKeyConstraint
                baseTableName="user_contacts"
                baseColumnNames="user_id"
                constraintName="fk_user_contacts_user_id"
                referencedTableName="users"
                referencedColumnNames="id"/>        <rollback>            <dropForeignKeyConstraint baseTableName="user_contacts" constraintName="fk_user_contacts_user_id"/>
            <dropForeignKeyConstraint baseTableName="user_contacts" constraintName="fk_user_contacts_user_address_id"/>
            <dropTable tableName="user_contacts"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
