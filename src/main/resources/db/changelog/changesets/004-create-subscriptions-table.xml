<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-subscriptions-table" author="developer">
        <createTable tableName="subscriptions">
            <column name="subscription_id" type="varchar(64)" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="slot_id" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="product_ids" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="frequency" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="next_delivery_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="total_amount" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="deliveries_completed" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="deliveries_failed" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="paused_at" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="pause_reason" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="created_on" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="modified_on" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="modified_by" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-add-delivery-address-id" author="yashsomani">
        <comment>Add delivery_address_id column to subscriptions table</comment>

        <addColumn tableName="subscriptions">
            <column name="delivery_address_id" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="subscriptions" columnName="delivery_address_id"/>
        </rollback>
    </changeSet>

</databaseChangeLog>

