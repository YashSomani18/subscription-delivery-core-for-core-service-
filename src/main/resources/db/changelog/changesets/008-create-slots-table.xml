<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="008-create-slots-table" author="developer">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="slots"/>
            </not>
            <tableExists tableName="zones"/>
        </preConditions>
        
        <createTable tableName="slots">
            <column name="slot_id" type="varchar(64)" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start_time" type="time">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="time">
                <constraints nullable="false"/>
            </column>
            <column name="slot_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="capacity" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="current_bookings" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="zone_id" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="modified_on" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="modified_by" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <rollback>
            <dropTable tableName="slots"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
