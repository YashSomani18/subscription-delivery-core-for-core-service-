<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="014-create-delivery-partners-table" author="developer">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="delivery_partners"/>
            </not>
        </preConditions>
        
        <createTable tableName="delivery_partners">
            <column name="delivery_partner_id" type="varchar(64)" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="partner_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone_number" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="password_hash" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="assigned_warehouse_id" type="varchar(36)">
                <constraints nullable="true"/>
            </column>
            <column name="assigned_zone_id" type="varchar(36)">
                <constraints nullable="true"/>
            </column>
            <column name="vehicle_type" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
            <column name="vehicle_number" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
            <column name="employment_status" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
            <column name="current_status" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
            <column name="total_deliveries" type="integer" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="successful_deliveries" type="integer" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="average_rating" type="decimal(3,2)" defaultValue="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="modified_on" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="modified_by" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <rollback>
            <dropTable tableName="delivery_partners"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
