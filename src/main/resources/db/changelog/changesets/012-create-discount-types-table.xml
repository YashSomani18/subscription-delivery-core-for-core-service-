<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="012-create-discount-types-table" author="developer">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="discount_types"/>
            </not>
        </preConditions>
        
        <createTable tableName="discount_types">
            <column name="id" type="varchar(64)" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="discount_type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="rule_format" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="discount_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="valid_from" type="timestamp with time zone">
                <constraints nullable="true"/>
            </column>
            <column name="valid_until" type="timestamp with time zone">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="modified_on" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="modified_by" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>        <rollback>            <dropTable tableName="discount_types"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
